package MAINMP;
import java.util.Scanner;
public class EmployeeManagement {

	    public static void main(String[] args) {

	    	        Scanner scanner = new Scanner(System.in);

	    	        // Create a sample employee object
	    	        Employee employee = new Employee(101, "Juan Dela Cruz", "Developer", "IT", "juan@example.com", "09123456789", 0);

	    	        int choice;

	    	        do {
	    	            // Menu options
	    	            System.out.println("========== MotorPH Employee App ==========");
	    	            System.out.println("1. View Employee Profile");
	    	            System.out.println("2. Clock In");
	    	            System.out.println("3. Clock Out");
	    	            System.out.println("4. Update Profile");
	    	            System.out.println("5. View Payroll");
	    	            System.out.println("6. Exit");
	    	            System.out.print("Enter your choice: ");
	    	            
	    	            // Handle user input safely
	    	            while (!scanner.hasNextInt()) {
	    	                System.out.println("Invalid input. Please enter a number.");
	    	                scanner.next(); // Skip invalid input
	    	            }
	    	            choice = scanner.nextInt();
	    	            scanner.nextLine(); // Consume newline character

	    	            switch (choice) {
	    	                case 1:
	    	                    employee.viewProfile();
	    	                    break;

	    	                case 2:
	    	                    employee.clockIn(choice);
	    	                    break;

	    	                case 3:
	    	                    employee.clockOut(choice);
	    	                    break;

	    	                case 4:
	    	                    System.out.print("Enter new email: ");
	    	                    String newEmail = scanner.nextLine();

	    	                    System.out.print("Enter new contact number: ");
	    	                    String newContact = scanner.nextLine();

	    	                    employee.updateProfile(newEmail, newContact);
	    	                    break;

	    	                case 5:
	    	                    System.out.print("Enter the number of working days this month: ");
	    	                    int workingDays = scanner.nextInt();

	    	                    double payroll = employee.calculatePayroll(workingDays);
	    	                    System.out.println("\n--- Payroll Details ---");
	    	                    System.out.println("Employee Name: " + employee.getName());
	    	                    System.out.println("Working Days: " + workingDays);
	    	                    System.out.println("Daily Rate: PHP " + employee.getHourlyRate());
	    	                    System.out.println("Total Pay: PHP " + payroll);
	    	                    System.out.println("-----------------------\n");
	    	                    break;

	    	                case 6:
	    	                    System.out.println("\nThank you for using the MotorPH Employee App! Goodbye.");
	    	                    break;

	    	                default:
	    	                    System.out.println("\nInvalid choice. Please select a valid option.\n");
	    	            }

	    	        } while (choice != 6);

	    	        scanner.close();
	    	    }
	    	}
